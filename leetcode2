struct ListNode* removeElements(struct ListNode* head, int val) {
   
    struct ListNode dummy;
    dummy.next = head;

    struct ListNode* curr = &dummy;

    while (curr->next != NULL) {
        if (curr->next->val == val) {
           
            struct ListNode* temp = curr->next;
            curr->next = temp->next;
            free(temp);
        } else {
            curr = curr->next;
        }
    }

    return dummy.next;
}
    
